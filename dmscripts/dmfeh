#!/usr/bin/env bash
set -euo pipefail

cmd="feh --bg-scale"
dire="$HOME/Pictures/Wallpapers"
rm -rf ~/.wall.txt
for entry in $dire/*.png
do
    echo $entry >> ~/.wall.txt
done
declare -a options=(
    $(cat ~/.wall.txt)
    "quit"
)

choice=$(printf '%s\n' "${options[@]}" | dmenu -i -l 7 -c -p 'Choose Wallpaper:')

if [[ "$choice" == "quit" ]]; then
    (notify-send Program Terminated) && exit
elif [ "$choice" ]; then
    feh --bg-scale ${choice}
else
    (notify-send Program Terminated) && exit 1
fi
